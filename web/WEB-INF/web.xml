<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>trongnt.filter.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>trongnt.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>trongnt.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadAllBookController</servlet-name>
        <servlet-class>trongnt.controller.LoadAllBookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminLoadAllBookController</servlet-name>
        <servlet-class>trongnt.controller.AdminLoadAllBookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDeleteController</servlet-name>
        <servlet-class>trongnt.controller.AdminDeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminInsertController</servlet-name>
        <servlet-class>trongnt.controller.AdminInsertController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminUpdateController</servlet-name>
        <servlet-class>trongnt.controller.AdminUpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>trongnt.controller.SearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadAllBookController</servlet-name>
        <url-pattern>/LoadAllBookController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLoadAllBookController</servlet-name>
        <url-pattern>/AdminLoadAllBookController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDeleteController</servlet-name>
        <url-pattern>/AdminDeleteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminInsertController</servlet-name>
        <url-pattern>/AdminInsertController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminUpdateController</servlet-name>
        <url-pattern>/AdminUpdateController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
